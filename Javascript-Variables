//Variable is a container for storing data
//variable behaves as if it was the value it contains

//2 steps to create a variable

//1. Declaration (Var, Let, Const) LET is mainly for variable scope
//2. Assignment operator (=)

let firstName = 'Jim'

let student = true;

let age;
age = 26

// or let age = 26;

console.log(age) //If you declare but do NOT assign the webpage will list it as undefined
console.log('Hello', firstName);

console.log('You are a student', student);


//Assigns the strings and variables to the <p></p> tags in the html doc
//Displays the output in the webpage itself since it is html code
document.getElementById('p1').innerHTML = 'Hello ' + firstName;
document.getElementById('p2').innerHTML = 'You are ' + age + ' years old'
document.getElementById('p3').innerHTML = 'You are a student ' + student 

