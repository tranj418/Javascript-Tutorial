let x;
let y;
let z;

// If you try and convert a string into a number like 'PIZZA' you will get NaN - NOT A NUMBER
x = Number('3.14')
y = String(3.14)
z = Boolean('') //converting empty string to BOOL is false

console.log(x, typeof x)
console.log(y, typeof y)
console.log(z, typeof z)
